{% extends "layout.twig" %}
{% block title %}Create Department{% endblock %}
{% block body %}
    <div class="w3-container">
        <h4>
            Add a new department to the database.
            <a href="#" onclick="history.back()"><i class="material-icons w3-text-red">subdirectory_arrow_left</i></a>
        </h4>
    </div>
    <div class="w3-row">
        <div class="w3-third">
            <div class="w3-container"></div>
        </div>
        <div class="w3-third w3-center">
            <form action="/departments/createDepartment" method="post">
                <label for="department"></label><input class="w3-input" type="text" name="department" id="department">
                <label>Department</label><br />
                <input class="w3-button w3-blue w3-round-xlarge" type="submit" value="Create">
            </form>
        </div>
    </div>
{% endblock %}